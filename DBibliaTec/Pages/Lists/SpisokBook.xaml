<Page x:Class="DBibliaTec.Pages.Lists.SpisokBook"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DBibliaTec.Pages.Lists"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Список книг" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="80,0,0,0" Width="640">
            <ComboBox Margin="5" Width="150" Name="ComboSortBy" SelectionChanged="ComboSortBy_SelectionChanged" Style="{StaticResource Cbox15}">
                <ComboBoxItem Content="все книги"></ComboBoxItem>
                <ComboBoxItem Content="Название по возростанию"></ComboBoxItem>
                <ComboBoxItem Content="Название по убыванию"></ComboBoxItem>
            </ComboBox>

            <ComboBox Margin="5" Width="150" Name="ComboSortBy2" SelectionChanged="ComboSortBy2_SelectionChanged" Style="{StaticResource Cbox15}">
                <ComboBoxItem Content="все жанры"></ComboBoxItem>
                <ComboBoxItem Content="Жанры по возрастанию"></ComboBoxItem>
                <ComboBoxItem Content="Жанры по убыванию"></ComboBoxItem>
            </ComboBox>

            <ComboBox Margin="5" Width="150" Name="ComboSortBy3" SelectionChanged="ComboSortBy3_SelectionChanged" Style="{StaticResource Cbox15}" 
                      SelectedValuePath="ID" DisplayMemberPath="Name" SelectedIndex="0">
            </ComboBox>

            <TextBox x:Name="TboxSerch" Width="150" Margin="5" 
                        TextChanged="TboxSerch_TextChanged" Style="{StaticResource TBox15}"/>
        </StackPanel>
        
        <ListView Grid.Row="2" Name="LView">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical" HorizontalAlignment="Left"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Image Source="{Binding ImageBook}"/>

                            <StackPanel Width="500" Height="200" Grid.Column="1">

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding NameS}" Style="{StaticResource TBlock15}" Margin="5 0 0 0"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding FIO}" Style="{StaticResource TBlock15}" Margin="5 0 0 0"/>
                                    <TextBlock Text="{Binding NAuthor}" Style="{StaticResource TBlock15}" Margin="5 0 0 0"/>
                                    <TextBlock Text="{Binding OAuthor}" Style="{StaticResource TBlock15}" Margin="5 0 0 0" HorizontalAlignment="Right"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Genre1.Genres}" Style="{StaticResource TBlock15}" Margin="5 0 0 0"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Counts}" Style="{StaticResource TBlock15}" Margin="5 0 0 0"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Category1.Categorys}" Style="{StaticResource TBlock15}" Margin="5 0 0 0"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DateVipuska}" Style="{StaticResource TBlock15}" Margin="5 0 0 0" Width="250"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="ChengeButton" Style="{StaticResource TButton}" Background="YellowGreen" Content="Редактирование" Margin="5 5" Click="ChengeButton_Click"/>
                                    <Button x:Name="DeleteButton" Style="{StaticResource TButton}" Background="{StaticResource GridBack}" Content="Удалить" Margin="5 5" Click="DeleteButton_Click"/>
                                </StackPanel>

                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:Name="AddButton" Grid.Row="3" Style="{StaticResource TButton}" Background="GreenYellow" Content="Добавить книгу" 
                Width="150" Height="40" HorizontalAlignment="Right" Grid.Column="1" Margin="0 0 10 0" Click="AddButton_Click"/>
    </Grid>
</Page>
